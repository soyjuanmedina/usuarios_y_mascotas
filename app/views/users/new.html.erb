<h1>Nuevo usuario</h1>

<%= form_for :user, url: users_path do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>. No se ha podido insertar el usuario:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :Nombre %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :Apellido %><br>
    <%= f.text_area :surname %>
  </p>

  <p>
    <%= f.label :Email %><br>
    <%= f.text_area :email %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Volver', users_path %>
