<%= render 'navbar_users' %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Listado de usuarios</h3>
  </div>
  <div class="panel-body">
    <table width=80%>
    <% @users.each do |user| %>
      <tr>
        <td width=75%><%= user.name %> <%= user.surname %>
          <hr />
        </td>
        <td>
          <%= link_to user_path(user), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-eye-open"></i> Mostrar
          <% end %>
          <hr />
        </td>
        <td>
          <%= link_to edit_user_path(user), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-pencil"></i> Editar
          <% end %>
          <hr />
        </td>
        <td>
          <%= link_to user_path(user),
              method: :delete,
              data: { confirm: '¿Está seguro?' },
              class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-trash"></i> Borrar
          <% end %>
          <hr />
        </td>
      </tr>
    <% end %>
    <table>
  </div>
</div>
<hr>

<%= link_to new_user_path, class: "btn btn-primary" do %>
  Nuevo usuario
<% end %>
